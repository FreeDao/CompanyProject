<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:text="@string/vip"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/yckz"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/yuan_bg" >

        <RadioButton
            android:id="@+id/keting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/keting_bg"
            android:button="@null" />

        <RadioButton
            android:id="@+id/ciwo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ciwo_bg"
            android:button="@null" />

        <RadioButton
            android:id="@+id/chazuo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-5dp"
            android:background="@drawable/chazuo_bg"
            android:button="@null" />

        <RadioButton
            android:id="@+id/chufang_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/btn_layout_marginBottom"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/btn_layout_marginRight"
            android:layout_marginTop="20dp"
            android:background="@drawable/chufang_bg"
            android:button="@null" />

        <RadioButton
            android:id="@+id/zhuwo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/btn_layout_marginBottom"
            android:layout_marginLeft="@dimen/btn_layout_marginLeft"
            android:background="@drawable/zhuwo_bg"
            android:button="@null" />

        <ImageView
            android:id="@+id/deng_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/chazuo_btn"
            android:layout_centerInParent="true"
            android:src="@drawable/deng_true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/alarm_detalis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableTop="@drawable/alarm_icon"
                android:gravity="center_horizontal"
                android:text="@string/alarm_record" />

            <ImageView
                android:id="@+id/alarm_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/alarm_detalis"
                android:src="@drawable/alram_count" />
        </RelativeLayout>

        <TextView
            android:id="@+id/switch_detalis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/switch_icon"
            android:gravity="center_horizontal"
            android:text="@string/more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/user_info_icon"
                android:gravity="center_horizontal"
                android:text="@string/user_info" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/alarm_detalis"
                android:src="@drawable/alram_count"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/shebei_set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/shebei_icon"
            android:gravity="center_horizontal"
            android:text="@string/shebei_set" />
    </LinearLayout>

</LinearLayout>