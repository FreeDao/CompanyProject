<?xml version="1.0" encoding="UTF-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />
        
        <HorizontalScrollView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:id="@+id/horizontalScrollView">

        <RadioGroup
            android:id="@id/main_radio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@null"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:scrollbars="horizontal" >

            <RadioButton
                android:id="@id/radio_button0"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio0" />

            <RadioButton
                android:id="@id/radio_button1"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio1" />

            <RadioButton
                android:id="@id/radio_button2"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio2" />

            <RadioButton
                android:id="@id/radio_button3"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio3" />

            <RadioButton
                android:id="@id/radio_button4"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio4" />

            <RadioButton
                android:id="@id/radio_button5"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio5" />
            
            <RadioButton
                android:id="@id/radio_button6"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio6" />

            <RadioButton
                android:id="@id/radio_button7"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio7" />

            <RadioButton
                android:id="@id/radio_button8"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio8" />
        </RadioGroup>
      </HorizontalScrollView>
   </LinearLayout>

</TabHost>