<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".MainFragementActivity" >
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/horizontalScrollView" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/tab_bg"
        android:scrollbars="none" >

        <RadioGroup
            android:id="@id/main_radio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@null"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:scrollbars="horizontal" >

            <RadioButton
                android:id="@id/radio_button0"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio0" />

            <RadioButton
                android:id="@id/radio_button1"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio1" />

            <RadioButton
                android:id="@id/radio_button2"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio2" />

            <RadioButton
                android:id="@id/radio_button3"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio3" />

            <RadioButton
                android:id="@id/radio_button4"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio4" />

            <RadioButton
                android:id="@id/radio_button5"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio5" />

            <RadioButton
                android:id="@id/radio_button6"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio6" />

            <RadioButton
                android:id="@id/radio_button7"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio7" />

            <RadioButton
                android:id="@id/radio_button8"
                style="@style/main_tab_bottom"
                android:background="@drawable/radio8" />
        </RadioGroup>
    </HorizontalScrollView>

</RelativeLayout>