		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_centerVertical="true"
		                android:textColor="@color/white"
		                android:textSize="@dimen/font_size_17"
		                android:background="@null" />
		        </RelativeLayout>
		        <RelativeLayout 
